# zathurarc

# Settings
set window-height 1024
set window-width 768
set selection-clipboard clipboard
set adjust-open width
#set show-scrollbars true
set show-hidden true
set window-title-basename true
#set window-title-home-tilde true
set statusbar-home-tilde true
set show-recent 10

# Padding
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 10

# Mappings
map q quit
map p print
map <Tab> toggle_index
map r reload
map <C-r> rotate
map t recolor
map a adjust_window best-fit
map s adjust_window width

# Row and column handling
set pages-per-row 1
set first-page-column 1:1
map <C-1> set "pages-per-row 1"
map <C-2> set "pages-per-row 2"
map <C-3> set "pages-per-row 3"
map <C-4> set "pages-per-row 4"
map <C-5> set "pages-per-row 5"
map <C-6> set "pages-per-row 6"
map <C-7> set "pages-per-row 7"
map <C-8> set "pages-per-row 8"
map <C-7> set "pages-per-row 9"

# Colors
set default-bg                  "#2D2D2D"
set default-fg                  "#ff0000"

set statusbar-fg                "#B0B0B0"
set statusbar-bg                "#202020"

set inputbar-bg                 "#151515"
set inputbar-fg                 "#303030"

set notification-error-bg       "#AC4142"
set notification-error-fg       "#151515"

set notification-warning-bg     "#AC4142"
set notification-warning-fg     "#151515"

set highlight-color             "#F4BF75"
set highlight-active-color      "#6A9FB5"

set completion-highlight-fg     "#303030"
set completion-highlight-bg     "#75B5AA"

set completion-bg               "#303030"
set completion-fg               "#75B5AA"

set notification-bg             "#90A959"
set notification-fg             "#151515"

set recolor-lightcolor          "#262626"
set recolor-darkcolor           "#DEDEDE"
set recolor
